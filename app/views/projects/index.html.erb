<div class="page-header">
  <div class="col-md-offset-2">
  <h1>
    Projects
    <a href="/projects/new" class="btn btn-lg btn-success">New Project</a>
  </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Project Name</th>
        <th>Industry</th>
        <th>Actions</th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td><%= project.user.username %></td>
        <td><%= project.name %></td>
        <td><%= project.industry %></td>
        <td>
          <% if current_user.id==project.user_id %>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% else %>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
